/* ═══════════════════════════════════════════════════════════════
   QUANTUM MUS - ARTISTIC REDESIGN
   Blueprint aesthetic with hand-drawn charm
   ═══════════════════════════════════════════════════════════════ */

:root {
  /* Artistic color palette - soft, elegant, quantum-inspired */
  --quantum-teal: #2ec4b6;
  --quantum-coral: #ff9e6d;
  --quantum-lavender: #a78bfa;
  --quantum-gold: #f5c518;
  --quantum-indigo: #4338ca;
  --paper-cream: #fffaf0;
  --paper-beige: #f5f0e1;
  --deep-navy: #0f172a;
  --charcoal: #1e293b;
  --sketch-charcoal: #475569;
  --circuit-blueprint: #64748b;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: var(--deep-navy);
  font-family: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
  color: var(--paper-cream);
  overflow: hidden;
  position: relative;
  height: 100vh;
}

