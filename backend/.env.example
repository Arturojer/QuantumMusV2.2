# Quantum Mus Backend - Environment Variables
# Copy this file to .env and customize as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=quantum-mus-secret-2026-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///quantum_mus.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/quantum_mus

# CORS / Allowed origins (Flask + Socket.IO). Si no existe, el servidor usa * por defecto.
ALLOWED_ORIGINS=*
# Producci√≥n (frontend en otro dominio): lista separada por comas
# ALLOWED_ORIGINS=https://midominio.com,https://www.midominio.com

# Game Configuration
MAX_PLAYERS_PER_ROOM=4
WIN_SCORE=40
DISCARD_TIMEOUT=10
TURN_TIMEOUT=10
