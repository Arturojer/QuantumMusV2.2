/* Quantum Mus - Hand-Drawn Aesthetic System */
:root {
  --quantum-blue: #4cc9f0;
  --quantum-purple: #7209b7;
  --quantum-pink: #f72585;
  --paper-bg: #f8f4e9;
  --deep-space: #1a1a2e;
  --sketch-line: #5e4c82;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: var(--deep-space);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: var(--quantum-blue);
  overflow: hidden;
  background-image: 
    radial-gradient(circle at 10% 20%, rgba(76, 201, 240, 0.05) 0%, transparent 20%),
    radial-gradient(circle at 90% 80%, rgba(247, 37, 133, 0.07) 0%, transparent 25%);
}

#game-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Hand-drawn card base */
