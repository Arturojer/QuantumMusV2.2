  width: 180px;
  height: 260px;
  background: var(--paper-bg);
  border-radius: 14px;
  box-shadow: 
    0 4px 8px rgba(0,0,0,0.3),
    inset 0 0 20px rgba(114, 9, 183, 0.08);
  transform: rotate(var(--rotation, 0deg));
