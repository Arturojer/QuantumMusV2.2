/* Dirac notation styling */
.dirac-label {
  position: absolute;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 0 1px 2px rgba(0,0,0,0.2);
  z-index: 10;
}

.card-top {
  top: 15px;
  left: 15px;
  font-size: 28px;
  color: var(--quantum-purple);
}

.card-bottom {
  bottom: 15px;
  right: 15px;
  font-size: 28px;
  transform: rotate(180deg);
  color: var(--quantum-purple);
}

.suit-icon {
  position: absolute;
  font-size: 24px;
  opacity: 0.85;
  left: 50%;
  transform: translateX(-50%);
}

/* Superposition ghost effect (applied via JS later) */
.superposition-ghost {
  opacity: 0.35;
  filter: blur(1px);
  position: absolute;
  z-index: 5;
}

/* Quantum gate buttons */
.quantum-gate {
  background: rgba(30, 20, 50, 0.85);
  border: 2px solid var(--quantum-blue);
  color: var(--quantum-blue);
  font-family: 'Courier New', monospace;
  font-weight: bold;
  border-radius: 50%;
  width: 60px;
  height: 60px;
  margin: 10px;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  transition: all 0.2s;
  box-shadow: 0 0 15px rgba(76, 201, 240, 0.4);
}

.quantum-gate:hover {
  transform: scale(1.1);
  box-shadow: 0 0 25px rgba(76, 201, 240, 0.7);
}

.quantum-gate::after {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(76,201,240,0.2) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s;
}

.quantum-gate:hover::after {
  opacity: 1;
}

/* Bloch sphere placeholder */
.bloch-sphere {
  position: absolute;
  width: 50px;
  height: 50px;
  background: radial-gradient(circle, #e9ecef 0%, #adb5bd 100%);
  border-radius: 50%;
  border: 1px solid var(--sketch-line);
  top: 15px;
  right: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10px;
  color: var(--quantum-purple);
  z-index: 20;
}

/* Game UI panels */
.ui-panel {
  background: rgba(26, 26, 46, 0.85);
  border: 2px solid var(--quantum-purple);
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 0 20px rgba(114, 9, 183, 0.5);
  backdrop-filter: blur(5px);
}

.controls {
  position: absolute;
  bottom: 30px;
  display: flex;
  gap: 15px;
  z-index: 100;
}

/* Hand-drawn wobble animation */
@keyframes wobble {
  0%, 100% { transform: rotate(-0.5deg); }
  50% { transform: rotate(0.5deg); }
}

.wobble {
  animation: wobble 8s infinite ease-in-out;
}

/* Quantum probability display */
.probability-bar {
  height: 8px;
  background: linear-gradient(90deg, var(--quantum-blue), var(--quantum-pink));
  border-radius: 4px;
  margin-top: 5px;
  position: relative;
  overflow: hidden;
}

.probability-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: repeating-linear-gradient(
    45deg,
    rgba(255,255,255,0.1) 0px,
    rgba(255,255,255,0.1) 5px,
    transparent 5px,
    transparent 10px
  );
}